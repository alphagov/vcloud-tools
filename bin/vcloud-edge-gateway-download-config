#!/usr/bin/env ruby

require 'rubygems'
require 'bundler/setup'
require 'optparse'
require 'methadone'

require 'vcloud/edge_gateway'

class App
  include Methadone::Main
  include Methadone::CLILogging
  include Vcloud

  main do
    Vcloud::EdgeGatewayServices.download_config(options['download-dir'])
  end

  on("--verbose", "Verbose output")
  on("--debug",   "Debugging output")
  on("-d DOWNLOAD_DIR","--download-dir","Download Directory. default is ./gateways/settings")


  description '
  vcloud-edge-gateway-download-config is a command line tool, to download vCloud Shield edge gateway config.
  It uses Fog under the hood.

  See https://github.com/alphagov/vcloud-tools for more info'

  version Vcloud::VERSION

  go!
end
